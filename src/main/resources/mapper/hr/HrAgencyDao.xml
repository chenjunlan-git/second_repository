            </if>
        </where>
    </select>

    <select id="newList" resultType="map" parameterType="int">
        select DISTINCT ha.id ,ha.name
        from bu_user_agency hua
        join hr_agency ha ON hua.agency_id=ha.id
        where hua.user_id = #{userId}
        ORDER BY ha.name ASC
